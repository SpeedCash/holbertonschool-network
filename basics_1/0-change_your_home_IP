#!/usr/bin/env bash
# This script configures localhost to resolve to 127.0.0.2 and facebook.com to resolve to 8.8.8.8

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Update /etc/hosts with new IPs
sudo sed -i '/127.0.0.1\s\+localhost/s/127.0.0.1/127.0.0.2/' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

echo "IP resolutions updated. To revert, use the backup file at /etc/hosts.bak."
